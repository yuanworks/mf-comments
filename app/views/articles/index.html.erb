<h1>Articles</h1>
<% @articles.each do |article| %>
  <p>
    <%= link_to(article.title, article.url, target: "_blank") %> - <%= link_to("Show Page", article) %>
  </p>
<% end %>

<%= form_for [@article, Article.new] do |f| %>
  <%= f.text_field :title, placeholder: "Title" %><br/>
  <%= f.text_field :url, placeholder: "URL" %><br/>
  <%= f.submit "Add New Article" %>
<% end %>

