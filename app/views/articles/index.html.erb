<%if admin_signed_in? %>
    <div>Hello, <%= current_admin.email %></div>
    <h1>Articles</h1>
    <% @articles.each do |article| %>
      <p>
        <%= link_to(article.title, article.url, target: "_blank") %> - <%= link_to("Show Page", article) %>
        <%= button_to "Delete", {action: "destroy", id: article.id }, method: :delete, data: {confirm: "Are you sure you want to delete the article?"} %>

      </p>
    <% end %>

    <h2>Add New Article</h2>
    <%= form_for [@article, Article.new] do |f| %>
      <%= f.text_field :title, placeholder: "Title" %><br/>
      <%= f.text_field :codename, placeholder: "Codename (ie: 'hamstring-2017-05')" %><br/>
      <%= f.text_field :url, placeholder: "URL" %><br/>
      <%= f.submit "Add New Article" %>
    <% end %>
<% else %>
    <div>Not logged in. /auth/login</div>
<% end %>
