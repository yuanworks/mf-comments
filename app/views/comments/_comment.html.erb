<li>
  
  <div class="comment">
  <div class="author">
      <%= image_tag gravatar_url(comment.email, 80), class: 'gravatar' %>
  
  <% if !comment.url? %>
    <%= comment.author %>
  <% else %>
    <%= link_to comment.author, comment.url %>
  <% end %>
  </div>
  
  <p><%= comment.body %></p>
  <!-- - <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small> -->
  <div id="mfc-reply-<%=comment.id%>" class="reply">Reply</div>
  <%#= button_to "Delete", {action: "delete", id: comment.id }, method: :delete, data: { confirm: "Are you sure?" } %>

  </div>

  <ul class="child-comment">
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>
