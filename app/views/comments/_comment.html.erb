<li>
  
  <div class="comment">
  <div class="author">
      <%= image_tag gravatar_url(comment.email, 80), class: 'gravatar' %>
  
  <% if !comment.url? %>
    <%= comment.author %>
  <% else %>
    <%= link_to comment.author, comment.url %>
  <% end %>
  
  <% if admin_signed_in? %>
    <% if !comment.ip_address.nil? %>
      <%= link_to comment.ip_address, "http://ipinfo.io/"+comment.ip_address, class: "user-meta user-ip", target: "_blank" %>
    <% end %>
    <span class='user-meta user-id'>#<%= comment.id %></span>
  <%end %>
  </div>
  
  <p><%= comment.body %></p>
  <% if Rails.application.config.x.show_comment_date %>
    <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>
  <% end %>
  <div id="mfc-reply-<%=comment.id%>" class="reply">Reply</div>
  <%if admin_signed_in? %>
    <%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  </div>

  <ul class="child-comment">
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>
