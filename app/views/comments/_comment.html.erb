    <%= f.text_field :url, placeholder: "Website" %><br/>
    <%= f.text_area :body, placeholder: "Add a Reply", required: true %><br/>
    <%= f.submit "Reply"  %>
  <% end %>
-->

  <ul>
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>
